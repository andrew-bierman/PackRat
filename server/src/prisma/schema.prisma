enum Role {
  user
  admin
}

enum ItemCategoryName {
  Food
  Water
  Essentials
}

enum TemplateType {
  pack
  trip
  item
}

enum GeoJSONGeometryType {
  Point
  LineString
  Polygon
  MultiPoint
  MultiPolygon
  MultiLineString
}
