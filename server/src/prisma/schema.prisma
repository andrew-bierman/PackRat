type PacksGrades {
  essentialItems           String @default("")
  redundancyAndVersatility String @default("")
  weight                   String @default("")
}

type PacksScores {
  essentialItemsScore           Int @default(0)
  redundancyAndVersatilityScore Int @default(0)
  weightScore                   Int @default(0)
}

